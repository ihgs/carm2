<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.fullname, [:admin, student] %></td>
        <td><%= student.age %></td>
        <td><%= render 'school_list', schools: student.school_list %></td>
        <td><%= link_to 'Edit', [:edit, :admin, student] %></td>
        <td><%= link_to 'Destroy', [:admin, student], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

