<% provide(:title, 'Studnet Detail') %>

<p id="notice"><%= notice %></p>

<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd>
    <%= @student.name[:family_name] %> <%= @student.name[:first_name] %><br>
    <%= @student.name[:family_name_kana] %> <%= @student.name[:first_name_kana] %>
  </dd>
  <dt><strong>Mail</strong></dt>
  <dd>
    <%= @student.mail %>
  </dd>
  <dt><strong>Card ID</strong></dt>
  <dd>
    <%= @student.card_id %>
  </dd>
  <dt><strong>Birthday:</strong></dt>
  <dd>
    <%= @student.birthday %>
  </dd>
  <dt><strong>School:</strong></dt>
  <dd>
    <%= render 'shared/school_list', schools: @student.school_list %>
  </dd>
  <dt><strong>Timestamp</strong></dt>
  <dd>
    <%= link_to 'Go', controller: "admin/stamp", action: "show"  %>
  </dd>
  <dt><strong>LearningLevel</strong></dt>
  <dd>
    <%= link_to 'Go', controller: "admin/learning_level_maps", action: "show"  %>
  </dd>
  <dt><strong>TestResult</strong></dt>
  <dd>
    <%= link_to 'Go', controller: "admin/students", action: "test_results"  %>
  </dd>
</dl>

<%= link_to 'Edit', [:edit, :admin, @student] %> |
<%= link_to 'Back', admin_students_path %>
