<% provide(:title, 'Listing schools') %>

<div class="table-responsive">
  <p id="notice"><%= notice %></p>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Note</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @schools.each do |school| %>
        <tr>
          <td><%= link_to school.display_name , [:admin, school] %></td>
          <td><%= school.note %></td>
          <td><%= link_to 'Edit', [:edit, :admin, school] %></td>
          <td><%= link_to 'Destroy', [:admin, school], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New School', new_admin_school_path, class: 'btn btn-primary'%>
</div>
