<p id="notice"><%= notice %></p>

<h1>Listing School Tests</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @school_tests.each do |school_test| %>
      <tr>
        <td><%= school_test[:name] %>
        <td><%= school_test.display_date %>
        <td><%= link_to 'Show', [:admin, school_test] %></td>
        <td><%= link_to 'Edit', [:edit, :admin, school_test] %></td>
        <td><%= link_to 'Destroy', [:admin, school_test], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

